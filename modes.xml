<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- nor → ukr -->

  <mode name="nor-ukr" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="nor-ukr.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="nor-ukr.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="nor-ukr.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="nor-ukr.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="nor-ukr.autolex.bin"/>
      </program>


      <program name="rtx-proc">
        <file name="nor-ukr.rtx.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="nor-ukr.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="nor-ukr.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- ukr → nor -->

  <mode name="ukr-nor" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="ukr-nor.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="ukr-nor.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="ukr-nor.prob"/>
      </program>

      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="ukr-nor.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="ukr-nor.autolex.bin"/>
      </program>


      <program name="rtx-proc">
        <file name="ukr-nor.rtx.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="ukr-nor.autogen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

